<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/show.css" />
<%- include('../partials/nav') %>

<h1>recipe</h1>
<section>
  <div><%= recipe.title %></div>
  <div>INGREDIENTS</div>
  <ul>
    <% recipe.ingredients.forEach(ingredient => { %>
      <li><%= ingredient.name %></li>
    <% }) %>
  </ul>

  <form id="add-to-recipe" action="/recipes/<%= recipe._id %>/ingredients" method="POST">
    <select name="ingredientId">
      <% ingredients.forEach(ingredient => { %>
        <option value="<%= ingredient._id %>"><%= ingredient.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add ingredient</button>
  </form>

  <button>Create Ingredients</button>
  <div>INSTRUCTIONS</div>
  <div id="title-divider"></div>
  <div><%= recipe.instructions %></div>
  <div>NOTES</div>
  <div><%= recipe.notes %></div>
    <button class="edit-btn"><a href="/recipes/<%= recipe._id %>/edit">Edit Recipe</a></button>
  <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
    <button>X</button>
  </form>
</section>

<%- include('../partials/footer') %>